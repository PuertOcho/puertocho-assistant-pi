# ==============================================
# PuertoCho Assistant Hardware Configuration
# ==============================================

# Backend Communication (Updated to port 8000)
BACKEND_URL=http://localhost:8000
BACKEND_WS_URL=ws://localhost:8000/ws
BACKEND_TIMEOUT=30

# Hardware Service Settings
HARDWARE_HOST=0.0.0.0
HARDWARE_PORT=8080
HARDWARE_LOG_LEVEL=INFO

# Audio Configuration
AUDIO_DEVICE_NAME=seeed-voicecard
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=2
AUDIO_CHUNK_SIZE=1024
AUDIO_FORMAT=int16
AUDIO_BUFFER_SIZE=4096

# Wake Word Configuration
WAKE_WORD_MODEL_PATH=/app/models/Puerto-ocho_es_raspberry-pi_v3_0_0.ppn
WAKE_WORD_SENSITIVITY=0.5
PORCUPINE_ACCESS_KEY=your_porcupine_access_key_here

# Voice Activity Detection
VAD_MODE=3
VAD_FRAME_DURATION=30
VAD_SILENCE_TIMEOUT=2.0
VAD_SPEECH_TIMEOUT=10.0

# GPIO Configuration
BUTTON_PIN=17
BUTTON_DEBOUNCE_TIME=0.2
BUTTON_LONG_PRESS_TIME=2.0

# LED Configuration
LED_COUNT=3
LED_SPI_BUS=0
LED_SPI_DEVICE=0
LED_BRIGHTNESS=128
LED_ANIMATION_SPEED=0.1

# NFC Configuration
NFC_I2C_BUS=1
NFC_I2C_ADDRESS=0x48
NFC_TIMEOUT=5.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/hardware.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Development/Debug
DEBUG_MODE=false
SIMULATE_HARDWARE=false
TEST_MODE=false

# Performance Tuning
THREAD_POOL_SIZE=4
ASYNC_WORKERS=2
AUDIO_LATENCY_MS=50

# Configuraci√≥n de LEDs
LED_COUNT=3
LED_BRIGHTNESS=128
LED_ANIMATION_SPEED=0.1
LED_SIMULATE=false