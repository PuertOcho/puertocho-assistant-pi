# Configuración del Asistente de Voz Puertocho con openWakeWord
# Copia este archivo como ".env" y completa los valores

# Servicio de transcripción HTTP
TRANSCRIPTION_SERVICE_URL=http://localhost:5000/transcribe

# Configuración de GPIO
BUTTON_PIN=22
LED_IDLE_PIN=17
LED_RECORD_PIN=27

# Configuración openWakeWord
OPENWAKEWORD_MODEL_PATHS=alexa,hey_mycroft  # Modelos preentrenados a usar
OPENWAKEWORD_THRESHOLD=0.5  # Umbral de activación (0.0-1.0)
OPENWAKEWORD_VAD_THRESHOLD=0.0  # VAD threshold (0.0=deshabilitado, 0.1-1.0=habilitado)
OPENWAKEWORD_ENABLE_SPEEX_NS=false  # Supresión de ruido Speex (true/false)
OPENWAKEWORD_INFERENCE_FRAMEWORK=onnx  # onnx o tflite

# Configuración de audio
AUDIO_SAMPLE_RATE=16000  # Frecuencia de muestreo (requerido: 16000)
AUDIO_CHANNELS=1  # Número de canales (requerido: 1)
AUDIO_CHUNK_SIZE=1280  # Tamaño del chunk (múltiplo de 80ms @ 16kHz) 